# Production Environment Variables Template
# Copy this file to .env.production and configure for production use

# Django Settings - CHANGE THESE IN PRODUCTION!
SECRET_KEY=CHANGE-THIS-TO-A-LONG-RANDOM-SECRET-KEY-AT-LEAST-50-CHARACTERS
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Security Settings
SECURE_HSTS_SECONDS=31536000
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True

# Database Configuration (PostgreSQL recommended)
DATABASE_URL=postgresql://user:password@localhost:5432/claude_goose_db

# Google Gemini API Configuration
GEMINI_API_KEY=your-production-gemini-api-key
GEMINI_MODEL=gemini-pro

# Claude API Configuration (Anthropic)
ANTHROPIC_API_KEY=your-production-anthropic-api-key
CLAUDE_MODEL=claude-3-sonnet-20240229
CLAUDE_HEADLESS_MODE=True

# Tailscale Configuration
TAILSCALE_ENABLED=True
TAILSCALE_HOSTNAME=your-production-hostname.tailnet.ts.net
TAILSCALE_AUTH_KEY=your-production-auth-key
TAILSCALE_API_KEY=your-production-api-key

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# CORS Settings
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Logging
LOG_LEVEL=WARNING

# Static files
STATIC_ROOT=/var/www/claude-goose/static/
MEDIA_ROOT=/var/www/claude-goose/media/
